<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.ui.cbrobbi.com.trips.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/main_page_background_design">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Create Your Own Itinerary!"
                    android:id="@+id/mainpage_title"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="30dp"
                    android:textColor="#039"
                    android:shadowColor="#3524cc"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="17dp">
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/with_without_air">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">
                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="With Air Transfer"
                    android:id="@+id/with_air_button"
                    android:layout_weight=".5"
                    android:onClick="radioMethod"
                    android:checked="true"
                    android:buttonTint="#0065B8" />
                    </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Without Air Transfer"
                    android:id="@+id/without_air_button"
                    android:layout_weight=".5"
                    android:onClick="radioMethod"
                    android:buttonTint="#0065B8" />
                    </FrameLayout>
                    </LinearLayout>
</RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="17dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/flying_from"
                        android:id="@+id/textView2"
                        android:layout_weight=".5"
                        android:layout_marginBottom="10dp" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:id="@+id/departure_cities_spinner"
                        android:entries="@array/cities"
                        android:layout_weight=".5"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/spinner_design"
                        android:clickable="false"
                        android:contextClickable="true"
                        android:minHeight="40dp"
                        android:popupBackground="#D3D5D3"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Cabin Class: "
                        android:id="@+id/textView3"
                        android:layout_weight=".5"
                        android:layout_marginBottom="10dp" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:id="@+id/cabin_class_spinner"
                        android:entries="@array/classes"
                        android:layout_weight=".5"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/spinner_design"
                        android:minHeight="40dp" />
                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Adults:"
                        android:id="@+id/adults_desc"
                        android:layout_weight=".5" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingRight="10dp">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:height="40dp"
                            android:paddingLeft="5dp"

                            android:inputType="number"
                            android:clickable="true"
                            android:hint="enter a number"
                            android:textSize="15dp"
                            android:layout_weight=".5"
                            android:onClick="setNumbers"
                            android:id="@+id/adultNumber"
                            android:background="@drawable/edittext_design" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Children:"
                        android:id="@+id/textView5"
                        android:layout_weight=".5" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingRight="10dp">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:height="40dp"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:onClick="setNumbers"
                            android:hint="enter a number"
                            android:textSize="15dp"
                            android:layout_weight=".5"
                            android:id="@+id/childrenNumber"

                            android:background="@drawable/edittext_design" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Room:"
                        android:id="@+id/textView6"
                        android:layout_weight=".5" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:minHeight="40dp">

                        <Spinner
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:id="@+id/room_num_spinner"
                            android:entries="@array/numbers"
                            android:layout_weight=".5"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/spinner_design" />

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Flyingt to:"
                        android:id="@+id/flying_to_desc"
                        android:layout_weight=".5" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingRight="10dp">

                        <Spinner
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/arriving_city_spinner"
                            android:entries="@array/visiting_cities"
                            android:layout_weight=".3"
                            android:background="@drawable/spinner_design"
                            android:minHeight="40dp" />


                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Arriving:"
                        android:id="@+id/arraving_desc"
                        android:layout_weight=".3" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingRight="10dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3">

                            <TextView
                                android:id="@+id/date_selected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_selected"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                            <Button
                                android:id="@+id/button1"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:onClick="setDate"
                                android:layout_weight="0.38"
                                android:textColor="#ffffff"
                                android:text="icon"
                                android:background="@drawable/button_design" />

                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nights"
                        android:id="@+id/nights_desc"
                        android:layout_weight=".5" />
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/nightNumber"
                            android:onClick="setNumbers"
                            android:inputType="number"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:hint="enter a number of nights"
                            android:paddingLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_design" />


                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginLeft="10dp"
            android:id="@+id/test">

        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_weight="1">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add City"
                android:id="@+id/add_city"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:background="@drawable/button_design"
                android:layout_marginRight="30dp"
                android:onClick="add_city"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm done"
                android:id="@+id/im_done_button"
                android:textColor="#ffffff"
                android:layout_weight=".5"
                android:onClick="im_done"
                android:nestedScrollingEnabled="false"
                android:background="@drawable/button_design"
                android:layout_marginRight="30dp" />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/black"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Do you not want to travel alone?"
                    android:id="@+id/textView11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/travelBuddy"
                    android:id="@+id/travelBuddyText"
                    android:textColor="#039"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="TOP DEALS"
                    android:id="@+id/textView13"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_weight=".3">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageVie99"/>
                       // android:src="@drawable/london"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="3dp"                        android:maxHeight="200dp"
                        android:maxWidth="130dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="London and Paris By Air. \n6 Nights"
                        android:id="@+id/textView14" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="From $1300"
                        android:id="@+id/textView34" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book it"
                        android:id="@+id/button4" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_weight=".3">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView9"/>
                        //android:src="@drawable/iran"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="3dp"                        android:maxHeight="200dp"
                        android:maxWidth="130dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Best of The Middle East. \n12 Nights"
                        android:id="@+id/textView15" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="From $1700"
                        android:id="@+id/textView1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book it"
                        android:id="@+id/button5" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_weight=".3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView99"/>
                        //android:src="@drawable/japan"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="3dp"                        android:maxHeight="200dp"
                        android:maxWidth="130dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Best of Asian Countries and Russia. \n10 Nights"
                        android:id="@+id/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="From $2900"
                        android:id="@+id/red2" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book it"
                        android:id="@+id/test1" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
